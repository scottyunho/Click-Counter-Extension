{
  "name": "Simple Click Counter",
  "version": "1.0",
  "description": "Simple counter for clicks!",
  "permissions": ["storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2,

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Clicks"
  }

}